generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement()) @map("user_id")
  role      String    @default("USER") @db.VarChar(20)
  nimNip    String    @unique @map("nim_nip") @db.VarChar(50)
  nama      String    @db.VarChar(100)
  email     String    @unique @db.VarChar(100)
  password  String    @db.VarChar(255)
  noTelepon String   @map("no_telepon") @db.VarChar(20)
  createdAt DateTime  @default(now()) @map("created_at")
  reservasi Reservasi[]

  @@map("users")
}

model Ruangan {
  id          Int       @id @default(autoincrement()) @map("ruangan_id")
  
  namaRuangan String    @map("nama_ruangan") @db.VarChar(100) 
  lokasi      String    @db.VarChar(100)
  kapasitas   Int
  status      String    @default("Tersedia") @db.VarChar(20)
  jamMulai    String    @default("08:00") @map("jam_mulai") 
  jamSelesai  String    @default("10:00") @map("jam_selesai")
  ac          Boolean   @default(false)
  proyektor   Boolean   @default(false)
  papanTulis  Boolean   @default(false) @map("papan_tulis")
  createdAt   DateTime  @default(now()) @map("created_at")
  deletedAt   DateTime? @map("deleted_at")
  reservasi   Reservasi[]

  @@map("ruangan")
}

model Reservasi {
  id            Int       @id @default(autoincrement()) @map("reservasi_id")
  userId        Int       @map("user_id")
  ruanganId     Int       @map("ruangan_id")
  tanggalBooking DateTime  @map("tanggal_booking") @db.Date 
  keperluan     String    @db.VarChar(255)
  status        String    @default("Pending") @db.VarChar(20)
  dokumenPath   String?   @map("dokumen_path") @db.VarChar(255)
  createdAt     DateTime  @default(now()) @map("created_at")
  user          User      @relation(fields: [userId], references: [id])
  ruangan       Ruangan   @relation(fields: [ruanganId], references: [id])

  @@unique([ruanganId, tanggalBooking], name: "unique_slot_booking")
  @@map("reservasi")
}